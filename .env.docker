# Server Configuration
PORT=3000
NODE_ENV=development

# MongoDB Configuration (Docker service name)
MONGODB_URI=mongodb://mongodb:27017/shopping_assistant
MONGODB_TEST_URI=mongodb://mongodb:27017/shopping_assistant_test

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=24h

# Socket.io Configuration
SOCKET_PORT=3001

# Rule Engine Configuration
MAX_RULE_DEPTH=10
RULE_CACHE_TTL=3600

# Discount Configuration
MAX_DISCOUNT_PERCENTAGE=80
MIN_CART_VALUE=0

# Frontend URL
FRONTEND_URL=http://localhost:8080
